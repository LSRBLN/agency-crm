# Database (Local SQLite)
# Absolute path recommended on VPS, e.g. /opt/agency-crm/data/crm.sqlite
DB_PATH=data/crm.sqlite

# Auth
JWT_SECRET=your-secret-key-change-me

# Admin bootstrap (optional but recommended)
# If set, the server ensures this admin user exists/gets updated at startup.
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=Admin

# Server
PORT=5050
GEMINI_API_KEY=your-gemini-api-key
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:5050/api/auth/gmail/callback

# Doppler Secret Management
DOPPLER_TOKEN=
DOPPLER_PROJECT=agency-crm
DOPPLER_CONFIG=dev

# Similarweb
SIMILARWEB_API_KEY=

# Google Places API (for Google-like lead search)
GOOGLE_PLACES_API_KEY=

# Google PageSpeed Insights API (optional: adds Lighthouse-style scores in lead search)
# You can usually reuse the same Google Cloud API key as GOOGLE_PLACES_API_KEY,
# but you must enable the PageSpeed Insights API for that key/project.
GOOGLE_PAGESPEED_API_KEY=

# Datadog Monitoring
DATADOG_API_KEY=
DD_ENV=development
DD_SERVICE=agency-crm

# Google Cloud
GOOGLE_CLOUD_PROJECT=

# Stripe
STRIPE_SECRET_KEY=

# Future Integrations
VEO_API_KEY=
NOTEBOOKLM_API_KEY=

# SMTP (Nodemailer - for review blast emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Google Workspace (Sheets + Calendar)
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SHEET_ID=
